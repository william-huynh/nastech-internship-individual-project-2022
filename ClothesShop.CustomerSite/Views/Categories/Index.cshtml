@model IEnumerable<ClothesShop.SharedVMs.Categories.CategoriesReadDto>

@{
    ViewData["Title"] = "All Categories";
}

<div class="container p-3">
    <div class="pt-4">
        <h2 class="text-primary">Categories List</h2>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-controller="Categories" asp-action="Single" class="btn btn-warning" >
                <i class="bi bi-search"></i> &nbsp; Search
            </a>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Product Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td width="10%">@r.Id</td>
                    <td width="20%">@r.Name</td>
                    <td width="30%">@r.Description</td>
                    <td>@r.ProductQuantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>

