@model IEnumerable<ClothesShop.SharedVMs.CategoryDto>

@{
    ViewData["Title"] = "All Categories";
}

<div class="container p-3">
    <div class="pt-4">
        <h2 class="text-primary">Categories List</h2>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-controller="Categories" asp-action="Single" class="btn btn-warning" >
                <i class="bi bi-search"></i> &nbsp; Search
            </a>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />

    @if (Model != null)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="10%">@category.Id</td>
                        <td width="20%">@category.Name</td>
                        <td width="30%">@category.Description</td>
                        <td>
                            <div class="w-120 btn-group" role="group">
                                <a asp-controller="Categories" asp-action="Update" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </div>
                            <div class="w-150 btn-group" role="group">
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" value="@category.Id" name="id" />
                                    <button type="submit" class="btn btn-primary mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

