@model IEnumerable<ClothesShop.SharedVMs.Categories.CategoriesReadDto>

@{
    ViewData["Title"] = "All Categories";
}

<h1>Index</h1>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Product Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Name</td>
                <td>@r.Description</td>
                <td>@r.ProductQuantity</td>
            </tr>
        }
    </tbody>
</table>
