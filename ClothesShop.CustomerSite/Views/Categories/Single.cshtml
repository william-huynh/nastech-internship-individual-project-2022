@model ClothesShop.SharedVMs.CategoryDto
@{
    ViewData["Title"] = "Single Category";
}

<div class="container p-3">
    <div class="pt-4">
        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
    <div class="pt-4">
        <h2 class="text-primary">Single Category by Id</h2>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-4">
                <input class="form-control" name="Id" placeholder="Enter Id to search" />
            </div>
            <div class="col-8">
                <button type="submit" class="btn btn-warning" >
                    <i class="bi bi-search"></i> &nbsp; Search
                </button>
            </div>
        </div>
    </form>
    <br />

    @if (Model != null)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Product Count</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td width="10%">@Model.Id</td>
                    <td width="20%">@Model.Name</td>
                    <td width="30%">@Model.Description</td>
                    <td>@Model.ProductQuantity</td>
                </tr>
            </tbody>
        </table>
    }
</div>
