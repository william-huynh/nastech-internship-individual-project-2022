@model ClothesShop.SharedVMs.Authenticate.AuthenticateRequestDto

@{
    Layout = "";
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClothesShop.CustomerSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- Google Fonts -->

    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.2.0/mdb.min.css" rel="stylesheet" />
    <!-- MDB -->

</head>
<body>

    <!-- Main -->
    <div class="login-container vh-100 d-flex justify-content-center align-items-center">
        <div class="login-container-box border d-flex justify-content-center align-items-center bg-light">
            <form asp-action="Login">
                <div class="text-center mb-3">
                    <i class="fa-solid fa-jedi fa-2xl text-success mb-4"></i>
                    <h3 class="fw-bold">LOGIN</h3>
                </div>

                <!-- Username input -->
                <div class="form-outline mb-4">
                    <input asp-for="Username" type="text" class="form-control" name="Username" />
                    <label asp-for="Username" class="form-label">Username</label>
                </div>
                <!-- Username input -->

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input asp-for="Password" type="password" class="form-control" name="Password" />
                    <label asp-for="Password" class="form-label">Password</label>
                </div>
                <!-- Password input -->

                <!-- Submit button -->
                <button type="submit" class="btn btn-success btn-block mb-4">Login</button>
                <!-- Submit button -->

                <!-- Register redirect -->
                <div class="text-center">
                    <p class="m-0">Not a member? <a asp-action="Register" class="text-success">Register</a></p>
                </div>
                <!-- Register redirect -->

            </form>
        </div>
    </div>
    <!-- Main -->

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/9a82700792.js" crossorigin="anonymous"></script>

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.2.0/mdb.min.js"></script>
    <!-- MDB -->

    <!-- Scripts -->

</body>
</html>