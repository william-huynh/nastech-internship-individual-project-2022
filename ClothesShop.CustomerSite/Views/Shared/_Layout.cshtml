<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClothesShop.CustomerSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClothesShop.CustomerSite.styles.css" />
    <link rel="stylesheet" href="~/css/Navbar.css" />
    <link rel="stylesheet" href="~/css/Homepage.css" />
    <style>
        body {
            font-family: 'Nunito Sans', sans-serif;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header>

        <!-- Navbar -->
        <nav class="navigation-bar-container navbar navbar-expand-lg navbar-dark bg-dark p-0">
            <div class="container-fluid d-flex p-0">
                <div class="col-2">
                
                </div>
                <div class="col-8">
                    <ul class="navigation-bar-center navbar-nav me-auto mb-2 mb-lg-0 justify-content-center">
                        <li class="nav-item active mx-3">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" href="#">About</a>
                        </li>
                    </ul>
                </div>
                <div class="navigation-bar-right col-2 d-flex justify-content-end">
                    <div class="navigation-cart-icon col-4 text-center">
                        <i class="fa-solid fa-cart-shopping fa-xl"></i>
                    </div>
                    <div class="navigation-user-icon col-4 text-center">
                        <span><i class="fa-solid fa-user fa-xl"></i></span>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Navbar -->

        <!-- Background image -->
        <div class="homepage-image p-5 text-center bg-image d-flex justify-content-end">
            <div class="mask">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white text-end">
                        <h4 class="mb-3">Forget the rules</h4>
                        <h1 class="mb-3">Create your style</h1>
                        <a class="btn btn-secondary btn-lg" asp-action="" asp-controller="" role="button">CHECK OUT PRODUCTS</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Background image -->

    </header>
    <!-- Header -->

    <!-- Container -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Container -->

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ClotheShop.CustomerSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Footer -->

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/9a82700792.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Scripts -->

</body>
</html>
