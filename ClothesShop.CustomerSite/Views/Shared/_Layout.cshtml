@{
    var isLogin = ViewBag.Login;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClothesShop.CustomerSite</title>

    <!-- Css import -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClothesShop.CustomerSite.styles.css" />
    <link rel="stylesheet" href="~/css/Navbar.css" />
    <link rel="stylesheet" href="~/css/Homepage.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    <link rel="stylesheet" href="~/css/Products.css" />
    <link rel="stylesheet" href="~/css/Cart.css" />
    <link rel="stylesheet" href="~/css/Error.css" />
    <!-- Css import -->

</head>
<body>

    <!-- Header -->
    <header>

        <!-- Navbar -->
        <nav class="navigation-bar-container navbar navbar-expand-lg navbar-dark bg-dark p-0">
            <div class="container-fluid d-flex p-0">
                <div class="col-2">
                
                </div>
                <div class="col-8">
                    <ul class="navigation-bar-center navbar-nav me-auto mb-2 mb-lg-0 justify-content-center">
                        <li class="nav-item active mx-3">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-controller="Clothes" asp-action="Index">Products</a>
                        </li>
                    </ul>
                </div>
                <div class="navigation-bar-right col-2 d-flex justify-content-end">
                    <div class="navigation-icon-container col-4 text-center">
                        <a asp-controller="Cart" asp-action="Index" class="navigation-cart-icon align-middle"><i class="fa-solid fa-cart-shopping fa-xl"></i></a>
                    </div>
                    <div class="navigation-icon-container col-4 text-center">
                        <a asp-controller="Home" asp-action="Logout" class="navigation-user-icon align-middle"><i class="fa-solid fa-right-to-bracket fa-xl"></i></a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Navbar -->

    </header>
    <!-- Header -->

    <!-- Main -->
    @RenderBody()
    <!-- Main -->

    <!-- Footer -->
    <footer class="footer text-muted py-3 bg-light border-top">
        <div class="container">
            <h4 class="footer-heading">Amor Clothes Shop</h4>
            <p>Contact: 0123456789</p>
            <p>Address: 12/21 Moon Street, Sun District, Milky Way City</p>
        </div>
    </footer>
    <!-- Footer -->

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/9a82700792.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Scripts -->

</body>
</html>
